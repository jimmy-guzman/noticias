{
  "$schema": "https://json.schemastore.org/lefthook.json",
  "pre-commit": {
    "parallel": true,
    "commands": {
      "lint": {
        "glob": "*.{js,ts,cjs,mjs,jsx,tsx}",
        "run": "pnpm exec eslint --fix . {staged_files}",
        "stage_fixed": true
      },
      "format": {
        "glob": "*.{js,ts,cjs,mjs,jsx,tsx,json,md,yaml,yml}",
        "run": "pnpm exec prettier --write --cache . {staged_files}",
        "stage_fixed": true
      },
      "sort-package-json": {
        "glob": "{,**/}package.json",
        "run": "pnpm dlx sort-package-json {staged_files}",
        "stage_fixed": true
      },
      "knip": {
        "run": "pnpm exec knip",
        "stage_fixed": true
      }
    }
  }
}
